#!/usr/bin/env node
const inquirer = require("inquirer")
const chalk = require("chalk")
const fs = require("fs")
const temObj = require(`${__dirname}/../template`)
const options = {
    encoding:"utf-8",
    flag:"w"
}
const questionList = [
    {
        type:"input",
        name:"temName",
        message:"template name : ",
        validate(val){
            if(val===null || val===''){
                return "Template name is empty"
            }else if(temObj[val]){
                return "Template has already existed!"
            }else{
                return true
            }
        }
    },
    {
        type:"input",
        name:"temUrl",
        message:"template url : ",
        validate(val){
            if(val===null || val===''){
                return "Template url is empty"
            }else{
                return true
            }
        }
    },
]
inquirer
.prompt(questionList).then(answers=>{
    let {temName,temUrl} = answers;
    temObj[temName]=temUrl
    fs.writeFile(`${__dirname}/../template.json`,JSON.stringify(temObj),options,(err)=>{
        if(err){
            console.log(err)
        }
        console.log(chalk.greenBright('\nAdded successfully!'))
        console.log(chalk.yellowBright("now your template list is"))
        console.log(temObj)
    })
})